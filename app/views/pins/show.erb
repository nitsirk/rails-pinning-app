<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= link_to "#{@pin.title}", @pin.url, html_options = {target: "_blank", class: "url"} %></b>
  </p>
  <% if @pin.image.exists? %>
    <img src="<%= @pin.image.url(:medium) %>">
  <% end %>
</div>
<br/>
<a href="/">
  <i class="fa fa-chevron-left"></i>
  Back to Home
</a>

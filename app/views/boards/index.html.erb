<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table style="width:30%">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name  %></td>
        <td><%= board.user.full_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<b><%= link_to 'New Board', new_board_path %></b>
